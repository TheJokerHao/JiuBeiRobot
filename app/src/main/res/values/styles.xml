<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowBackground">@color/color_f5</item>
        <item name="android:listDivider">@drawable/shape_divider_bg</item>
    </style>

    <style name="MyTrans" parent="AppTheme">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Translucent</item>
    </style>

    <style name="BalckTheme">
        <item name="android:windowBackground">@color/black</item>
        <item name="android:windowNoTitle">true</item>
    </style>
    <!-- 自定义仿IOS的AlertDialog的样式 -->
    <style name="AlertDialogStyle" parent="@android:style/Theme.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <!-- 带删除按钮Dialog样式 -->
    <style name="DeleteStyle" parent="@android:style/Theme.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <!--红色线-->
    <style name="RedLineStyle">
        <item name="android:layout_width">6px</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/color_main</item>
    </style>

    <!--红色按钮-->
    <style name="RedButtonStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">54dp</item>
        <item name="android:background">@color/color_main</item>
        <item name="android:textColor">@color/color_white</item>
        <item name="android:textSize">@dimen/common_size20sp</item>
    </style>
    <!--酒窖信息-->

    <style name="TVjiujiaoInfo">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/color_default_font_color</item>
        <item name="android:textSize">@dimen/common_size20sp</item>
    </style>

    <!--系统管理-->
    <style name="SysButtonStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">54dp</item>
        <item name="android:background">@color/color_main</item>
        <item name="android:textColor">@color/color_white</item>
        <item name="android:textSize">@dimen/common_size30sp</item>
    </style>


    <!--水平小分割线-->
    <style name="HorizontalLine">
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@color/color_dd</item>
        <item name="android:layout_height">@dimen/line_height</item>
    </style>


    <!--水平粗分割线-->
    <style name="HorizontalBigLine">
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@color/color_dd</item>
        <item name="android:layout_height">@dimen/line_height_big</item>
    </style>

    <!--垂直分隔线-->
    <style name="VerticalLine">
        <item name="android:layout_width">@dimen/line_height</item>
        <item name="android:background">@color/color_dd</item>
        <item name="android:layout_height">match_parent</item>
    </style>
    <!--大分割线-->
    <style name="bigHorizontalLine">
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@color/color_dd</item>
        <item name="android:layout_height">@dimen/line_bit_height</item>
    </style>

    <!--订单筛选按钮样式-->
    <style name="orderListFilter">
        <item name="android:button">@null</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/selector_order_list_filter</item>
        <item name="android:layout_marginLeft">@dimen/common_margin45dp</item>
        <item name="android:layout_marginRight">@dimen/common_margin45dp</item>
        <item name="android:textColor">@color/color_order_list_filter_selector</item>
        <item name="android:textSize">@dimen/common_size16sp</item>
    </style>

    <!--红点样式-->
    <style name="RedPoint">
        <item name="android:layout_width">@dimen/shopping_cart_num_point</item>
        <item name="android:layout_height">@dimen/shopping_cart_num_point</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:background">@drawable/shape_main_color_num_point</item>
        <item name="android:ellipsize">end</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/color_white</item>
        <item name="android:textSize">@dimen/shopping_cart_num_font_size</item>
        <item name="android:visibility">invisible</item>
    </style>

    <!--透明Activity-->
    <style name="TransparentActivityStyle" parent="AppTheme">
        <item name="android:windowBackground">@color/color_trans</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Translucent</item>
    </style>
</resources>
