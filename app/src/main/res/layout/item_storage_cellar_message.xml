<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/common_margin30dp"
        android:paddingRight="@dimen/common_margin30dp">

        <TextView
            android:id="@+id/tv_storage_name"
            android:layout_width="@dimen/common_margin0dp"
            android:layout_height="@dimen/common_margin50dp"
            android:layout_weight="3"
            android:gravity="center_vertical"
            android:singleLine="true"
            android:textColor="@color/color_33"
            android:textSize="@dimen/common_size18sp"
            tools:text="13138895762" />


        <TextView
            android:id="@+id/tv_storage_start_time"
            android:layout_width="@dimen/common_margin0dp"
            android:layout_height="@dimen/common_margin50dp"
            android:layout_weight="3"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:textColor="@color/color_33"
            android:textSize="@dimen/common_size18sp"
            tools:text="13138895762" />

        <TextView
            android:id="@+id/tv_storage_age"
            android:layout_width="@dimen/common_margin0dp"
            android:layout_height="@dimen/common_margin50dp"
            android:layout_weight="2"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:textColor="@color/color_33"
            android:textSize="@dimen/common_size18sp"
            tools:text="20" />

        <TextView
            android:id="@+id/tv_storage_number"
            android:layout_width="@dimen/common_margin0dp"
            android:layout_height="@dimen/common_margin50dp"
            android:layout_weight="2"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:textColor="@color/color_33"
            android:textSize="@dimen/common_size18sp"
            tools:text="20" />

        <TextView
            android:id="@+id/tv_storage_all_number"
            android:layout_width="@dimen/common_margin0dp"
            android:layout_height="@dimen/common_margin50dp"
            android:layout_weight="2"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:textColor="@color/color_33"
            android:textSize="@dimen/common_size18sp"
            tools:text="20" />
    </LinearLayout>

</LinearLayout>