<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/color_white"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/shopping_list_flilter_height"
        android:paddingLeft="@dimen/common_margin20dp"
        android:paddingRight="@dimen/common_margin20dp">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:gravity="center|left"
            android:text="fdsf"
            android:textColor="@color/color_default_font_color"
            android:textSize="@dimen/shopping_list_flilter_font_size" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/common_margin20dp"
        android:paddingRight="@dimen/common_margin20dp">

        <EditText
            android:id="@+id/et_low"
            android:layout_width="0dp"
            android:layout_height="@dimen/shopping_list_flilter_input_height"
            android:layout_weight="1"
            android:background="@drawable/shape_filter_item_constion_bg"
            android:gravity="center"
            android:hint="@string/shopping_list_flilter_year"
            android:padding="@dimen/shopping_list_filter_item_year_margin"
            android:textSize="@dimen/shopping_list_filter_item_font_size" />

        <View
            android:id="@+id/v_line"
            android:layout_width="10dp"
            android:layout_height="@dimen/line_height"
            android:layout_marginLeft="@dimen/shopping_list_filter_item_year_margin"
            android:layout_marginRight="@dimen/shopping_list_filter_item_year_margin"
            android:background="@color/color_33" />

        <EditText
            android:id="@+id/et_higt"
            android:layout_width="0dp"
            android:layout_height="@dimen/shopping_list_flilter_input_height"
            android:layout_weight="1"
            android:background="@drawable/shape_filter_item_constion_bg"
            android:gravity="center"
            android:hint="@string/shopping_list_flilter_year"
            android:padding="@dimen/shopping_list_filter_item_year_margin"
            android:textSize="@dimen/shopping_list_filter_item_font_size" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/shopping_list_filter_item_year_margin"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/common_margin20dp"
        android:paddingRight="@dimen/common_margin20dp">

        <com.fecmobile.jiubeirobot.common.view.SelectedView
            android:id="@+id/sv_filter1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <com.fecmobile.jiubeirobot.common.view.SelectedView
            android:id="@+id/sv_filter2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/shopping_list_filter_item_margin"
            android:layout_marginRight="@dimen/shopping_list_filter_item_margin"
            android:layout_weight="1" />

        <com.fecmobile.jiubeirobot.common.view.SelectedView
            android:id="@+id/sv_filter3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />
    </LinearLayout>
</LinearLayout>