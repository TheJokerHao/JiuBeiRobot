<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/llyt_item_bg"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingRight="@dimen/common_margin20dp"
    android:paddingTop="@dimen/common_margin20dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_white"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_shop_img"
            android:layout_width="@dimen/shopping_list_shop_img_height"
            android:layout_height="@dimen/shopping_list_shop_img_height"
            android:scaleType="centerCrop"
            tools:src="@drawable/test_img" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingLeft="@dimen/common_margin10dp"
            android:paddingRight="@dimen/common_margin20dp"
            android:paddingTop="@dimen/common_margin20dp">

            <TextView
                android:id="@+id/tv_shop_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="法国原瓶拉昂城堡普通酒"
                android:textColor="@color/black"
                android:textSize="@dimen/common_size20sp" />

            <TextView
                android:id="@+id/tv_shop_name_en"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/common_margin5dp"
                android:ellipsize="end"
                android:maxLines="1"
                android:textColor="@color/color_99"
                android:textSize="@dimen/common_size18sp"
                tools:text="GONG HUI YUAN" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/common_margin15dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/tv_national_floag"
                    android:layout_width="50dp"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    tools:src="@mipmap/ic_launcher" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:paddingLeft="@dimen/common_margin10dp">

                    <TextView
                        android:id="@+id/tv_national"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:textSize="@dimen/shopping_list_filter_item_hint_font_size"
                        tools:text="美国" />

                    <TextView
                        android:id="@+id/tv_chateau"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:textSize="@dimen/shopping_list_filter_item_hint_font_size"
                        tools:text="会元酒庄" />
                </LinearLayout>

                <TextView
                    android:id="@+id/tv_repertory"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:ellipsize="end"
                    android:gravity="bottom"
                    android:maxLines="1"
                    android:textSize="@dimen/shopping_list_filter_item_hint_font_size"
                    tools:text="库存：20瓶" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/shopping_list_shop_margin"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_price"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColor="@color/color_main"
                    android:textSize="@dimen/common_size20sp"
                    tools:text="￥12.11" />

                <TextView
                    android:id="@+id/tv_add_to_card"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/shape_join_shopcart_btn_bg"
                    android:gravity="center"
                    android:paddingBottom="@dimen/common_margin5dp"
                    android:paddingLeft="@dimen/shopping_list_filter_text_margin"
                    android:paddingRight="@dimen/shopping_list_filter_text_margin"
                    android:paddingTop="@dimen/common_margin5dp"
                    android:text="@string/shopping_list_shop_join"
                    android:textColor="@color/color_white"
                    android:textSize="@dimen/shopping_list_filter_item_hint_font_size" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <!--</android.support.v7.widget.CardView>-->
</LinearLayout>