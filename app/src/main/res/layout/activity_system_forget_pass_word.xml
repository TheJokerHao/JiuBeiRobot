<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_system_forget_pass_word"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/manage_logo_backgroup"
    tools:context="com.fecmobile.jiubeirobot.ui.activity.cellar.manager.SystemForgetPassWordActivity">

    <LinearLayout
        android:id="@+id/llyt_forget_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/common_margin30dp"
        android:layout_marginTop="@dimen/common_margin20dp">

        <LinearLayout
            android:id="@+id/llyt_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/manage_login_back" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/common_margin10dp"
                android:text="@string/common_back"
                android:textColor="@color/color_translucence"
                android:textSize="@dimen/title_search_back_font_size" />
        </LinearLayout>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/llyt_forget_title"
        android:gravity="center">

        <LinearLayout
            android:layout_width="@dimen/common_margin498dp"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/common_margin20dp"
            android:background="@color/color_white"
            android:orientation="vertical"
            android:paddingBottom="@dimen/common_margin60dp"
            android:paddingLeft="@dimen/common_margin30dp"
            android:paddingRight="@dimen/common_margin30dp"
            android:paddingTop="@dimen/common_margin24dp">

            <TextView
                android:id="@+id/tv_password_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/cellar_manage_setting_find_password"
                android:textColor="@color/color_33"
                android:textSize="@dimen/user_dialog_title_font_size" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/common_margin24dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/common_margin60dp"
                    android:gravity="center_vertical"
                    android:text="@string/cellar_manage_setting_send_identifying_code"
                    android:textColor="@color/color_99"
                    android:textSize="@dimen/common_size18sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/common_margin60dp"
                    android:background="@drawable/shape_input_circular_boder"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="@dimen/common_margin20dp"
                        android:paddingRight="@dimen/common_margin20dp"
                        android:text="@string/cellar_manage_setting_phone_number"
                        android:textColor="@color/color_33"
                        android:textSize="@dimen/common_size20sp" />
                    <!--添加了输入类型-->
                    <EditText
                        android:id="@+id/et_phone_number"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:hint="@string/cellar_manage_setting_make_phone_number"
                        android:inputType="number"
                        android:maxLength="11"
                        android:maxLines="1"
                        android:textColor="@color/color_99"
                        android:textSize="@dimen/common_size18sp" />
                </LinearLayout>


            </LinearLayout>

            <Button
                android:id="@+id/btn_exit"
                style="@style/RedButtonStyle"
                android:layout_height="54dp"
                android:layout_marginTop="@dimen/user_dialog_padding"
                android:text="@string/common_next" />

        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>
