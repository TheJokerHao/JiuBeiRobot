<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_login_manage"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/manage_logo_backgroup"
    tools:context="com.fecmobile.jiubeirobot.ui.activity.cellar.manager.LoginManageActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/common_margin30dp"
        android:layout_marginTop="@dimen/common_margin20dp">

        <LinearLayout
            android:id="@+id/llyt_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/manage_login_back" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/common_margin10dp"
                android:text="@string/common_back"
                android:textColor="@color/color_translucence"
                android:textSize="@dimen/title_search_back_font_size" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@color/color_white"
        android:orientation="horizontal">


        <FrameLayout
            android:layout_width="@dimen/common_margin260dp"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="@dimen/common_margin260dp"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/manage_login" />


            <Button
                android:id="@+id/btn_toUP"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="点击"
                android:textSize="30dp"
                android:visibility="gone" />


        </FrameLayout>

        <LinearLayout
            android:layout_width="@dimen/common_margin500dp"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:paddingBottom="@dimen/common_margin20dp"
            android:paddingTop="@dimen/common_margin20dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/cellar_manage_login_title"
                android:textColor="@color/black"
                android:textSize="@dimen/common_size24sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/common_margin12dp"
                android:gravity="center"
                android:text="@string/cellar_manage_login_remark"
                android:textColor="@color/color_main"
                android:textSize="@dimen/common_size18sp" />

            <LinearLayout
                android:layout_width="@dimen/common_margin410dp"
                android:layout_height="@dimen/common_margin107dp"
                android:layout_marginTop="@dimen/common_margin36dp"
                android:background="@drawable/shape_input_circular_boder"
                android:gravity="center"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/common_margin20dp"
                        android:layout_marginRight="@dimen/common_margin30dp"
                        android:src="@mipmap/manage_login_acount" />

                    <EditText
                        android:id="@+id/et_manage_account"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:hint="@string/cellar_manage_login_account_hint"
                        android:inputType="number"
                        android:textColor="@color/color_33"
                        android:textSize="@dimen/common_size18sp"
                        tools:text="13800138200" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/line_height"
                    android:background="@color/color_ee" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/common_margin20dp"
                        android:layout_marginRight="@dimen/common_margin30dp"
                        android:src="@mipmap/manage_login_password" />

                    <EditText
                        android:id="@+id/et_manage_password"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:hint="@string/cellar_manage_login_password_hint"
                        android:inputType="textPassword"
                        android:src="@mipmap/manage_login_password"
                        android:textColor="@color/color_33"
                        tools:text="13800138200" />
                </LinearLayout>


            </LinearLayout>


            <Button
                android:id="@+id/bt_manage_login"
                style="@style/RedButtonStyle"
                android:layout_marginLeft="@dimen/common_margin45dp"
                android:layout_marginRight="@dimen/common_margin45dp"
                android:layout_marginTop="@dimen/common_margin30dp"
                android:text="@string/cellar_manage_login_login" />

            <LinearLayout
                android:layout_width="@dimen/common_margin410dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/common_margin20dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/tv_manage_forget"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/cellar_manage_login_login_forget"
                    android:textColor="@color/color_gray_blue"
                    android:textSize="@dimen/common_size18sp" />

                <!--<RadioButton-->
                <!--android:layout_width="40dp"-->
                <!--android:layout_height="40dp"-->
                <!--android:id="@+id/cb"-->
                <!--android:background="@color/black"-->
                <!--/>-->


            </LinearLayout>

        </LinearLayout>


    </LinearLayout>

</RelativeLayout>
