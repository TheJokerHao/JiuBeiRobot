<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/llyt_item_storage_cellar"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingRight="@dimen/common_margin20dp"
    android:paddingTop="@dimen/common_margin20dp">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@null"
        app:cardCornerRadius="@dimen/common_margin5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/color_white"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv_cellar_icon"
                    android:layout_width="@dimen/common_margin194dp"
                    android:layout_height="@dimen/common_margin194dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/defualt_img" />

                <LinearLayout

                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="@dimen/common_margin20dp"
                    android:orientation="vertical"
                    android:paddingLeft="@dimen/common_margin10dp"
                    android:paddingRight="@dimen/common_margin20dp"
                    android:paddingTop="@dimen/common_margin20dp">

                    <TextView
                        android:id="@+id/iv_cellar_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textColor="@color/color_04"
                        android:textSize="@dimen/common_size20sp"
                        tools:text="法国原瓶拉昂城堡葡萄酒" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/common_margin32dp"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/cellar_manage_storage_cellar_type" />

                        <TextView
                            android:id="@+id/iv_cellar_type"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            tools:text="干红葡萄酒" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/common_margin32dp"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/cellar_manage_storage_cellar_cellar" />

                        <TextView
                            android:id="@+id/iv_cellar_cellar"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            tools:text="吕萨吕斯酒保" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/common_margin32dp"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/cellar_manage_storage_cellar_all_storage" />

                        <TextView
                            android:id="@+id/iv_cellar_all_storage"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            tools:text="200瓶" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>