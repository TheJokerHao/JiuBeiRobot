<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/title_height"
    android:background="@color/color_title_bg"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:id="@+id/title_type_search_title"
    android:paddingBottom="@dimen/title_search_padingtop"
    android:paddingLeft="@dimen/common_margin20dp"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/title_search_padingtop">

    <LinearLayout
        android:id="@+id/llyt_back"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/common_margin36dp"
        android:clickable="true"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/back" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/common_margin10dp"
            android:text="@string/common_back"
            android:textColor="@color/color_white"
            android:textSize="@dimen/title_search_back_font_size" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/common_margin42dp"
        android:layout_weight="1"
        android:background="@drawable/shape_title_search_bg"
        android:gravity="center_vertical">

        <LinearLayout
            android:id="@+id/llyt_search_type"
            android:gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/common_margin36dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_search_type"
                android:layout_marginLeft="@dimen/common_margin20dp"
                android:layout_marginRight="@dimen/common_margin10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/color_white"
                android:textSize="@dimen/title_search_input_font_size"
                android:text="全部" />

            <ImageView
                android:scaleType="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/common_margin20dp"
                android:src="@mipmap/manage_type_cellar" />
        </LinearLayout>

        <View
            android:layout_marginTop="@dimen/common_margin10dp"
            android:background="@color/color_white"
            android:layout_width="@dimen/line_height"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/common_margin10dp"></View>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/common_margin20dp"
            android:src="@mipmap/search" />

        <EditText
            android:id="@+id/et_search_input"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/common_margin10dp"
            android:layout_weight="1"
            android:background="@null"
            android:gravity="center_vertical"
            android:hint="@string/title_shopping_search_input"
            android:imeOptions="actionSearch"
            android:maxLength="20"
            android:maxLines="1"
            android:singleLine="true"
            android:textColor="@color/color_white"
            android:textColorHint="@color/color_white"
            android:textSize="@dimen/title_search_input_font_size" />
    </LinearLayout>


</LinearLayout>